extends ../layout.pug

block cdn-bootstrap
 h1= message
 form(action='/book/search' method='get')
   input(type='text' name='search')
   button Search
 
   .container.nana
     h3.panel-title  List books
     if(noMatch !== underfined)
       p= noMatch
     each book in books 
      .card(style='width: 18rem;')
       img.card-img-top(alt='Card image cap', src=`${book.cover}`, height='200px', width='150px')
       .card-body
        h5.card-title  Name :
         span= book.title
        p.card-text  Price : 
         span= book.price
        a.btn.btn-primary(href=`/book/view/${book.id}`) View more
        a(href='/cart/add/' + book.id) ThuÃª


 script(src='https://code.jquery.com/jquery-3.2.1.slim.min.js')
 script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js')
